<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_salewise_menu_list" model="ir.ui.view">
        <field name="name">salewise.menu.list</field>
        <field name="model">salewise.menu</field>
        <field name="arch" type="xml">
            <list string="Salewise Menus" default_order="complete_sequence">
                <field name="sequence" widget="handle"/>
                <field name="display_name"/>
                <field name="icon"/>
                <field name="action_ref"/>
                <field name="model_name"/>
                <field name="views"/>
                <field name="level"/>
                <field name="technical"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_salewise_menu_form" model="ir.ui.view">
        <field name="name">salewise.menu.form</field>
        <field name="model">salewise.menu</field>
        <field name="arch" type="xml">
            <form string="Salewise Menu">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Menu Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="hierarchy">
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="icon" placeholder="e.g., Contact2, Target, Mail"/>
                            <field name="level" readonly="1"/>
                        </group>
                        <group name="action">
                            <field name="action_ref" placeholder="e.g., contacts.action_contacts"/>
                            <field name="model_name" placeholder="e.g., res.partner"/>
                            <field name="views" placeholder="e.g., card,list,form"/>
                            <field name="search_view_ref" placeholder="e.g., base.view_res_partner_filter"/>
                        </group>
                    </group>
                    <group name="advanced" string="Advanced Settings">
                        <field name="domain" placeholder="e.g., [('customer_rank', '>', 0)]"/>
                        <field name="context" placeholder='e.g., {"default_is_company": true}'/>
                        <field name="technical"/>
                    </group>
                    <notebook>
                        <page string="Child Menus" name="children">
                            <field name="child_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="icon"/>
                                    <field name="action_ref"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_salewise_menu_search" model="ir.ui.view">
        <field name="name">salewise.menu.search</field>
        <field name="model">salewise.menu</field>
        <field name="arch" type="xml">
            <search string="Search Menus">
                <field name="name"/>
                <field name="action_ref"/>
                <field name="model_name"/>
                <separator/>
                <filter string="Level 1" name="level_1" domain="[('level', '=', 1)]"/>
                <filter string="Level 2" name="level_2" domain="[('level', '=', 2)]"/>
                <filter string="Level 3" name="level_3" domain="[('level', '=', 3)]"/>
                <separator/>
                <filter string="Technical" name="technical" domain="[('technical', '=', True)]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Parent Menu" name="group_parent" domain="[]" context="{'group_by': 'parent_id'}"/>
                    <filter string="Level" name="group_level" domain="[]" context="{'group_by': 'level'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_salewise_menu" model="ir.actions.act_window">
        <field name="name">Salewise Menus</field>
        <field name="res_model">salewise.menu</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_salewise_menu_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first menu item
            </p>
            <p>
                Manage the menu structure for the Salewise application.
            </p>
        </field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_salewise_root"
              name="Salewise"
              sequence="100"/>
              
    <menuitem id="menu_salewise_config"
              name="Configuration"
              parent="menu_salewise_root"
              sequence="10"/>
              
    <menuitem id="menu_salewise_menu"
              name="Menu Items"
              parent="menu_salewise_config"
              action="action_salewise_menu"
              sequence="10"/>
</odoo>