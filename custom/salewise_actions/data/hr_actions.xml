<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- HR Actions -->
    <record id="salewise_hr_open_view_employee_list_my" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="original_action" ref="hr.open_view_employee_list_my"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        <field name="context">{"chat_icon": true, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
    </record>
    <record id="salewise_hr_hr_department_kanban_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="hr.hr_department_kanban_action"/>
        <field name="domain">[('has_read_access', '=', True)]</field>
        <field name="search_view_id" ref="hr.view_department_filter"/>
    </record>
    <record id="salewise_hr_action_hr_job" model="ir.actions.act_window">
        <field name="name">Job Positions</field>
        <field name="res_model">hr.job</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="hr.action_hr_job"/>
        <field name="context">{"search_default_Current":1, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="hr.view_job_filter"/>
    </record>
    <record id="salewise_hr_hr_contract_type_action" model="ir.actions.act_window">
        <field name="name">Employment Types</field>
        <field name="res_model">hr.contract.type</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="hr.hr_contract_type_action"/>
    </record>
    <record id="salewise_hr_hr_work_location_action" model="ir.actions.act_window">
        <field name="name">Work Locations</field>
        <field name="res_model">hr.work.location</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="hr.hr_work_location_action"/>
    </record>
    <record id="salewise_hr_hr_departure_reason_action" model="ir.actions.act_window">
        <field name="name">Departure Reasons</field>
        <field name="res_model">hr.departure.reason</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="hr.hr_departure_reason_action"/>
    </record>

        <!-- HR_CONTRACT Actions -->
    <record id="salewise_hr_contract_action_hr_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">hr.contract</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="original_action" ref="hr_contract.action_hr_contract"/>
        <field name="domain">[('employee_id', '!=', False)]</field>
        <field name="context">{"search_default_group_by_state": 1, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="hr_contract.hr_contract_view_search"/>
    </record>

        <!-- HR_RECRUITMENT Actions -->
    <record id="salewise_hr_recruitment_action_hr_candidate" model="ir.actions.act_window">
        <field name="name">Candidates</field>
        <field name="res_model">hr.candidate</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="hr_recruitment.action_hr_candidate"/>
    </record>
    <record id="salewise_hr_recruitment_crm_case_categ0_act_job" model="ir.actions.act_window">
        <field name="name">Applications</field>
        <field name="res_model">hr.applicant</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="hr_recruitment.crm_case_categ0_act_job"/>
        <field name="domain">[('stage_id.sequence','&lt;=','1')]</field>
        <field name="context">{"search_default_job_id": ["active_id"], "default_job_id": "active_id", "search_default_stage": 1, "dialog_size": "medium", "allow_search_matching_applicants": 1, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
    </record>
    <record id="salewise_hr_recruitment_hr_recruitment_stage_act" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">hr.recruitment.stage</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="hr_recruitment.hr_recruitment_stage_act"/>
    </record>
    <record id="salewise_hr_recruitment_hr_applicant_refuse_reason_action" model="ir.actions.act_window">
        <field name="name">Refuse Reasons</field>
        <field name="res_model">hr.applicant.refuse.reason</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="hr_recruitment.hr_applicant_refuse_reason_action"/>
    </record>

        <!-- HR_SKILLS Actions -->
    <record id="salewise_hr_skills_hr_employee_skill_report_action" model="ir.actions.act_window">
        <field name="name">Employee Skills</field>
        <field name="res_model">hr.employee.skill.report</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="hr_skills.hr_employee_skill_report_action"/>
        <field name="context">{
                        'search_default_employee': 1,
                        'search_default_employees_with_skills': 1,
                }, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="hr_skills.hr_employee_skill_report_view_search"/>
    </record>
    <record id="salewise_hr_skills_hr_skill_type_action" model="ir.actions.act_window">
        <field name="name">Skill Types</field>
        <field name="res_model">hr.skill.type</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="hr_skills.hr_skill_type_action"/>
    </record>

        <!-- RESOURCE Actions -->
    <record id="salewise_resource_action_resource_calendar_form" model="ir.actions.act_window">
        <field name="name">Working Schedules</field>
        <field name="res_model">resource.calendar</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="resource.action_resource_calendar_form"/>
        <field name="domain">['|', ('company_id', '=', False), ('company_id', 'in', allowed_company_ids)]</field>
        <field name="search_view_id" ref="resource.view_resource_calendar_search"/>
    </record>

    </data>
</odoo>