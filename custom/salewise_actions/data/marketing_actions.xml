<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SOCIAL Actions -->
    <record id="salewise_social_action_social_post" model="ir.actions.act_window">
        <field name="name">Social Posts</field>
        <field name="res_model">social.post</field>
        <field name="view_mode">kanban,calendar,form</field>
        <field name="original_action" ref="social.action_social_post"/>
        <field name="context">{'search_default_filter_my_posts':1, 'salewise_mode': True}</field>
    </record>
    <record id="salewise_social_action_social_stream_post" model="ir.actions.act_window">
        <field name="name">Feed</field>
        <field name="res_model">social.stream.post</field>
        <field name="view_mode">kanban</field>
        <field name="original_action" ref="social.action_social_stream_post"/>
        <field name="context">{'search_default_group_by_stream': 1, 'search_default_search_my_streams': 1, 'salewise_mode': True}</field>
    </record>
    <record id="salewise_social_action_view_utm_campaigns" model="ir.actions.act_window">
        <field name="name">Campaigns</field>
        <field name="res_model">utm.campaign</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="social.action_view_utm_campaigns"/>
        <field name="domain">[('is_auto_campaign', '=', False)]</field>
    </record>
    <record id="salewise_social_action_social_account" model="ir.actions.act_window">
        <field name="name">Social Accounts</field>
        <field name="res_model">social.account</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="social.action_social_account"/>
    </record>

        <!-- MARKETING_AUTOMATION Actions -->
    <record id="salewise_marketing_automation_marketing_campaign_action" model="ir.actions.act_window">
        <field name="name">Campaigns</field>
        <field name="res_model">marketing.campaign</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="marketing_automation.marketing_campaign_action"/>
    </record>
    <record id="salewise_marketing_automation_marketing_participants_action_reporting" model="ir.actions.act_window">
        <field name="name">Participants</field>
        <field name="res_model">marketing.participant</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="marketing_automation.marketing_participants_action_reporting"/>
    </record>
    <record id="salewise_marketing_automation_marketing_trace_action" model="ir.actions.act_window">
        <field name="name">Traces</field>
        <field name="res_model">marketing.trace</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="marketing_automation.marketing_trace_action"/>
    </record>

        <!-- UTM Actions -->
    <record id="salewise_utm_utm_campaign_action" model="ir.actions.act_window">
        <field name="name">Campaigns</field>
        <field name="res_model">utm.campaign</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="utm.utm_campaign_action"/>
    </record>
    <record id="salewise_utm_utm_source_action" model="ir.actions.act_window">
        <field name="name">Sources</field>
        <field name="res_model">utm.source</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="utm.utm_source_action"/>
    </record>
    <record id="salewise_utm_utm_medium_action" model="ir.actions.act_window">
        <field name="name">Mediums</field>
        <field name="res_model">utm.medium</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="utm.utm_medium_action"/>
        <field name="search_view_id" ref="utm.utm_medium_view_search"/>
    </record>

        <!-- LINK_TRACKER Actions -->
    <record id="salewise_link_tracker_link_tracker_action" model="ir.actions.act_window">
        <field name="name">Link Tracker</field>
        <field name="res_model">link.tracker</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="link_tracker.link_tracker_action"/>
    </record>

    </data>
</odoo>