<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- CRM Actions -->
    <record id="salewise_crm_crm_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">crm.stage</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="crm.crm_stage_action"/>
    </record>
    <record id="salewise_crm_crm_lost_reason_action" model="ir.actions.act_window">
        <field name="name">Lost Reasons</field>
        <field name="res_model">crm.lost.reason</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="crm.crm_lost_reason_action"/>
    </record>
    <record id="salewise_crm_crm_recurring_plan_action" model="ir.actions.act_window">
        <field name="name">Recurring Plans</field>
        <field name="res_model">crm.recurring.plan</field>
        <field name="view_mode">list</field>
        <field name="original_action" ref="crm.crm_recurring_plan_action"/>
    </record>

        <!-- SALE Actions -->
    <record id="salewise_sale_action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="sale.action_quotations_with_onboarding"/>
        <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
    </record>
    <record id="salewise_sale_action_orders" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="sale.action_orders"/>
        <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
    </record>
    <record id="salewise_sale_product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="original_action" ref="sale.product_template_action"/>
        <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1, 'salewise_mode': True}</field>
        <field name="search_view_id" ref="product.product_template_search_view"/>
    </record>

        <!-- SALE_MANAGEMENT Actions -->
    <record id="salewise_sale_management_sale_order_template_action" model="ir.actions.act_window">
        <field name="name">Quotation Templates</field>
        <field name="res_model">sale.order.template</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="sale_management.sale_order_template_action"/>
    </record>

        <!-- SALES_TEAM Actions -->
    <record id="salewise_sales_team_crm_team_action_pipeline" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">crm.team</field>
        <field name="view_mode">kanban,form</field>
        <field name="original_action" ref="sales_team.crm_team_action_pipeline"/>
        <field name="domain">[('use_opportunities', '=', True)]</field>
        <field name="context">{"in_sales_app": true, 'salewise_mode': True}</field>
    </record>
    <record id="salewise_sales_team_crm_team_member_action" model="ir.actions.act_window">
        <field name="name">Team Members</field>
        <field name="res_model">crm.team.member</field>
        <field name="view_mode">list,form</field>
        <field name="original_action" ref="sales_team.crm_team_member_action"/>
    </record>

    </data>
</odoo>