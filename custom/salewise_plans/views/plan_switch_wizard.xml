<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salewise_plan_switch_wizard" model="ir.ui.view">
        <field name="name">salewise.plan.switch.wizard.form</field>
        <field name="model">salewise.plan.switch.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Plan">
                <group>
                    <field name="plan_id"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_salewise_plan_switch" model="ir.actions.act_window">
        <field name="name">Change Plan</field>
        <field name="res_model">salewise.plan.switch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_salewise_plan_switch_wizard"/>
    </record>
</odoo>

