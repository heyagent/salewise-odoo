<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Plan List View -->
        <record id="view_salewise_plan_list" model="ir.ui.view">
            <field name="name">salewise.plan.list</field>
            <field name="model">salewise.plan</field>
            <field name="arch" type="xml">
                <list string="Subscription Plans">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                    <field name="is_active"/>
                </list>
            </field>
        </record>
        
        <!-- Plan Form View -->
        <record id="view_salewise_plan_form" model="ir.ui.view">
            <field name="name">salewise.plan.form</field>
            <field name="model">salewise.plan</field>
            <field name="arch" type="xml">
                <form string="Subscription Plan">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="price"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Enter a description for this plan..."/>
                        </group>
                        <notebook>
                            <page string="Features" name="features">
                                <field name="feature_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Companies" name="companies">
                                <field name="company_ids">
                                    <list>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Plan Search View -->
        <record id="view_salewise_plan_search" model="ir.ui.view">
            <field name="name">salewise.plan.search</field>
            <field name="model">salewise.plan</field>
            <field name="arch" type="xml">
                <search string="Search Plans">
                    <field name="name"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                </search>
            </field>
        </record>
        
        <!-- Plan Action -->
        <record id="action_salewise_plan" model="ir.actions.act_window">
            <field name="name">Subscription Plans</field>
            <field name="res_model">salewise.plan</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_salewise_plan_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
        <!-- Menu Items -->
        <menuitem
            id="menu_salewise_plans"
            name="Plans"
            parent="base.menu_administration"
            sequence="100"/>
            
        <menuitem
            id="menu_salewise_plan_list"
            name="Subscription Plans"
            parent="menu_salewise_plans"
            action="action_salewise_plan"
            sequence="10"/>
        
    </data>
</odoo>