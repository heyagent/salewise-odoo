<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Add plan field to company form -->
        <record id="view_company_form_inherit_plans" model="ir.ui.view">
            <field name="name">res.company.form.inherit.plans</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Subscription Plan" name="subscription_plan" autofocus="autofocus">
                        <group>
                            <group>
                                <field name="plan_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>