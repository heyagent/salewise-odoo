<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Add plan field to company form -->
        <record id="view_company_form_inherit_plans" model="ir.ui.view">
            <field name="name">res.company.form.inherit.plans</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="before">
                    <page string="Subscription Plan" name="subscription_plan">
                        <group>
                            <field name="plan_type" widget="radio"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>