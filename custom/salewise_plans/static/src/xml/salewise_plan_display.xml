<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="salewise_plans.PlanDisplay">
        <t t-if="showSaasMenus">
            <div class="o_salewise_plan_display d-flex align-items-center">
                <t t-if="state.loading">
                    <span class="text-white small">Loading...</span>
                </t>
                <t t-else="">
                    <span class="text-white small">
                        <t t-esc="state.planName"/>
                    </span>
                </t>
            </div>
        </t>
        <t t-else="">
            <!-- Debug: NOT in SaaS mode, should not display anything -->
        </t>
    </t>
</templates>