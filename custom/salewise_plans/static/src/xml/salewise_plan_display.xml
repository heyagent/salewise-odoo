<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="salewise_plans.PlanDisplay">
        <div class="o_salewise_plan_display d-none d-md-flex align-items-center mx-2">
            <t t-if="state.loading">
                <span class="badge bg-secondary">
                    <i class="fa fa-spinner fa-spin"/> Loading...
                </span>
            </t>
            <t t-else="">
                <span class="badge" t-att-class="{
                    'bg-primary': state.planName !== 'No Plan' and state.planName !== 'Error',
                    'bg-warning': state.planName === 'No Plan',
                    'bg-danger': state.planName === 'Error'
                }">
                    <i class="fa fa-star me-1"/>
                    <span t-esc="state.planName"/>
                </span>
            </t>
        </div>
    </t>
</templates>