<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- USD Currency (reference to existing) -->
        <record id="base.USD" model="res.currency">
            <field name="active" eval="True"/>
        </record>
        
        <!-- Starter Plan -->
        <record id="plan_starter" model="salewise.plan">
            <field name="name">Starter</field>
            <field name="description">Perfect for small businesses getting started with Odoo</field>
            <field name="price">29.99</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="sequence">10</field>
            <field name="is_active" eval="True"/>
        </record>
        
        <!-- Professional Plan -->
        <record id="plan_professional" model="salewise.plan">
            <field name="name">Professional</field>
            <field name="description">For growing businesses that need advanced features</field>
            <field name="price">79.99</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="sequence">20</field>
            <field name="is_active" eval="True"/>
        </record>
        
        <!-- Enterprise Plan -->
        <record id="plan_enterprise" model="salewise.plan">
            <field name="name">Enterprise</field>
            <field name="description">Complete solution for large organizations</field>
            <field name="price">199.99</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="sequence">30</field>
            <field name="is_active" eval="True"/>
        </record>
        
    </data>
</odoo>