<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- SYSTEM Menus -->
        <record id="menu_saas_system_automation" model="ir.ui.menu">
            <field name="name">Automation</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system" />
            <field name="sequence">10</field>
            <field name="lucide_icon">Workflow</field>
        </record>
        <record id="menu_saas_system_automation_automation_rules" model="ir.ui.menu">
            <field name="name">Automation Rules</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system_automation" />
            <field name="sequence">10</field>
            <field name="action" ref="salewise_actions.salewise_base_automation_base_automation_act" />
            <field name="original_menu_id" ref="base_automation.menu_base_automation_form" />
        </record>
        <record id="menu_saas_system_settings" model="ir.ui.menu">
            <field name="name">Settings</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system" />
            <field name="sequence">20</field>
            <field name="lucide_icon">Sliders</field>
        </record>
        <record id="menu_saas_system_settings_general_settings" model="ir.ui.menu">
            <field name="name">General Settings</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system_settings" />
            <field name="sequence">10</field>
            <field name="action" ref="salewise_actions.salewise_base_setup_action_general_configuration" />
            <field name="original_menu_id" ref="base_setup.menu_config" />
            <field name="groups_id" eval="[(4, ref('base.group_system'))]" />
        </record>
        <record id="menu_saas_system_settings_users" model="ir.ui.menu">
            <field name="name">Users</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system_settings" />
            <field name="sequence">20</field>
            <field name="action" ref="salewise_actions.salewise_base_action_res_users" />
            <field name="original_menu_id" ref="base.menu_action_res_users" />
        </record>
        <record id="menu_saas_system_settings_user_roles" model="ir.ui.menu">
            <field name="name">User Roles</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system_settings" />
            <field name="sequence">30</field>
            <field name="action" ref="salewise_actions.salewise_base_user_role_action_res_users_role_tree" />
            <field name="original_menu_id" ref="base_user_role.menu_action_res_users_role_tree" />
        </record>
        <record id="menu_saas_system_settings_languages" model="ir.ui.menu">
            <field name="name">Languages</field>
            <field name="is_saas">True</field>
            <field name="parent_id" ref="menu_saas_system_settings" />
            <field name="sequence">40</field>
            <field name="action" ref="salewise_actions.salewise_base_res_lang_act_window" />
            <field name="original_menu_id" ref="base.menu_res_lang_act_window" />
        </record>
    </data>
</odoo>
